<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:StabilityMatrix.Avalonia.Controls"
    xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    xmlns:input="clr-namespace:FluentAvalonia.UI.Input;assembly=FluentAvalonia"
    xmlns:fluentIcons="clr-namespace:FluentIcons.Avalonia.Fluent;assembly=FluentIcons.Avalonia.Fluent"
    xmlns:vmControls="clr-namespace:StabilityMatrix.Avalonia.ViewModels.Controls"
    x:DataType="vmControls:PaintCanvasViewModel">
    <Design.PreviewWith>
        <controls:PaintCanvas />
    </Design.PreviewWith>

    <Style Selector="controls|PaintCanvas">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid RowDefinitions="Auto,Auto">
                    <Grid.Resources>
                        <input:StandardUICommand
                            x:Key="ClearCanvasCommand"
                            Command="{Binding ClearCanvasCommand, RelativeSource={RelativeSource TemplatedParent}}"
                            IconSource="Clear"
                            Label="Clear" />
                        <input:StandardUICommand
                            x:Key="UndoCommand"
                            HotKey="Ctrl+Z"
                            Command="{Binding UndoCommand}"
                            IconSource="Undo"
                            Label="Undo" />
                    </Grid.Resources>
                    <Grid.Styles>
                        <!-- Change cursor to crosshair when mouse is over the canvas -->
                        <!--<Style Selector="controls|SkiaCustomCanvas:pointerover">
                            <Setter Property="Cursor" Value="Cross"/>
                        </Style>
                        <Style Selector="controls|SkiaCustomCanvas:pointerleave">
                            <Setter Property="Cursor" Value="Arrow"/>
                        </Style>-->
                    </Grid.Styles>
                    <StackPanel Margin="8,2" Orientation="Horizontal" Spacing="6">

                        <ui:ColorPickerButton
                            VerticalAlignment="Center"
                            Color="{Binding PaintBrushColor}" />
                        <Label 
                            Margin="8,0,0,0"
                            Content="Pressure:" VerticalAlignment="Center" />
                        <Label 
                            Margin="-4,0,0,0"
                            Content="{Binding CurrentPenPressure}" VerticalAlignment="Center" />
                        
                        <ui:CommandBar HorizontalAlignment="Right" Margin="0,4">
                            <ui:CommandBar.PrimaryCommands>
                                <!-- Brush Size -->
                                <ui:CommandBarButton>
                                    <ui:CommandBarButton.IconSource>
                                        <fluentIcons:SymbolIconSource
                                            FontSize="12"
                                            Symbol="ArrowAutofitWidth" />
                                    </ui:CommandBarButton.IconSource>
                                    <ui:CommandBarButton.Flyout>
                                        <Flyout>
                                            <StackPanel>
                                                <Label Content="Brush Size"/>
                                                <ui:NumberBox 
                                                    MinWidth="120"
                                                    Maximum="100" 
                                                    Minimum="0" 
                                                    SmallChange="1" 
                                                    LargeChange="1"
                                                    SpinButtonPlacementMode="Inline"
                                                    Value="{Binding PaintBrushSize}" />
                                            </StackPanel>
                                        </Flyout>
                                    </ui:CommandBarButton.Flyout>
                                </ui:CommandBarButton>
                                <!-- Opacity -->
                                <ui:CommandBarButton>
                                    <ui:CommandBarButton.IconSource>
                                        <fluentIcons:SymbolIconSource
                                            FontSize="12"
                                            Symbol="CircleHalfFill" />
                                    </ui:CommandBarButton.IconSource>
                                    <ui:CommandBarButton.Flyout>
                                        <Flyout>
                                            <StackPanel>
                                                <Label Content="Brush Opacity"/>
                                                <Slider
                                                    MinWidth="200"
                                                    IsSnapToTickEnabled="True"
                                                    Maximum="1"
                                                    Minimum="0"
                                                    SmallChange="0.01"
                                                    TickFrequency="0.01"
                                                    Value="{Binding PaintBrushAlpha}" />
                                            </StackPanel>
                                        </Flyout>
                                    </ui:CommandBarButton.Flyout>
                                </ui:CommandBarButton>
                                
                                <ui:CommandBarButton Command="{StaticResource UndoCommand}" />
                                <ui:CommandBarButton Command="{StaticResource ClearCanvasCommand}" />
                                
                            </ui:CommandBar.PrimaryCommands>
                            
                            <!--<ui:CommandBar.SecondaryCommands>
                                <ui:CommandBarButton Command="{StaticResource UndoCommand}" />
                                <ui:CommandBarButton Command="{StaticResource ClearCanvasCommand}" />
                            </ui:CommandBar.SecondaryCommands>-->
                        </ui:CommandBar>
                    </StackPanel>
                    <ZoomBorder
                        x:Name="PART_ZoomBorder"
                        Grid.Row="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="SlateBlue"
                        ClipToBounds="True"
                        Focusable="True"
                        Stretch="None"
                        ZoomSpeed="1.2">
                        <controls:SkiaCustomCanvas
                            x:Name="PART_MainCanvas"
                            Width="1000"
                            Height="1000"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="Transparent"/>
                    </ZoomBorder>

                </Grid>
            </ControlTemplate>
        </Setter>


    </Style>
</Styles>
