                                                        IsVisible="{Binding Local.ConnectedModelInfo, Converter={x:Static ObjectConverters.IsNotNull}, FallbackValue=False}"
                                                        Text="{Binding Local.ConnectedModelInfo.ModelName, FallbackValue=''}"
